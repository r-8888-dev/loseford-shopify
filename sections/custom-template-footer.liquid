{%- liquid
  assign show_selectors = false
  assign currency_selector = false
  assign locale_selector = false

  if section.settings.show_currency_selector and shop.enabled_currencies.size > 1
    assign currency_selector = true
  endif

  if section.settings.show_locale_selector and shop.enabled_locales.size > 1
    assign locale_selector = true
  endif

  if currency_selector or locale_selector
    assign show_selectors = true
  endif
-%}

{%- if settings.color_footer == settings.color_body_bg -%}
  {%- style -%}
    .site-footer {
      border-top: 1px solid {{ settings.color_borders }};
    }
  {%- endstyle -%}
{%- endif -%}

<footer class="site-footer" data-section-id="{{ section.id }}" data-section-type="footer-section">
  <div class="footer-links">
    <div class="page-width">
      <div class="footer-section">
        <h4>PICK UP</h4>
        <ul>
          <li><a href="{{ collections['new'] }}">新商品</a></li>
          <li><a href="{{ routes.all_products }}">すべての商品</a></li>
          <li class="dropdown">
            <a href="#">カテゴリー<span class="toggle">+</span></a>
            <ul class="dropdown-content">
              {% for collection in collections %}
                <li>
                  <a href="{{ collection.url }}">{{ collection.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </li>
          <li><a href="#">モチーフ</a></li>
          <li><a href="#">値段</a></li>
          <li><a href="#">ランキング</a></li>
          <li><a href="{{ routes.sale_products }}">SALE</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h4>CONTENT</h4>
        <ul>
          <li><a href="#">プレゼント</a></li>
          <li><a href="#">LOOK</a></li>
          <li><a href="#">特集</a></li>
          <li><a href="#">お知らせ</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h4>Guide</h4>
        <ul>
          <li><a href="/pages/contact">お問い合わせ</a></li>
          <li><a href="/pages/legal">特定商法</a></li>
          <li><a href="/pages/shipping">運貨</a></li>
          <li><a href="/pages/faq">よくある質問</a></li>
          <li><a href="/pages/privacy-policy">プライバシーポリシー</a></li>
          <li><a href="#">言語</a></li>
        </ul>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="social-media">
      <a href="https://instagram.com"
        ><img
          src="https://cdn.shopify.com/s/files/1/0641/0416/9516/files/instagram.svg?v=1729677815"
          width="40px"
          height="40px"
      ></a>
      <a href="https://tiktok.com"
        ><img
          src="https://cdn.shopify.com/s/files/1/0641/0416/9516/files/tiktok.svg?v=1729677816"
          width="40px"
          height="40px"
      ></a>
      <a href="https://line.me"
        ><img
          src="https://cdn.shopify.com/s/files/1/0641/0416/9516/files/line.svg?v=1729677816"
          width="40px"
          height="40px"
      ></a>
    </div>
    <div class="logo">
      <img
        src="https://cdn.shopify.com/s/files/1/0641/0416/9516/files/mainLogo.png?v=1729033761"
        width="330px"
        height="48px"
      >
    </div>
    <p class="copyright">Copyright ©{{ 'now' | date: '%Y' }}, LOSEFORD All Rights Reserved.</p>
  </div>
</footer>

<style>
  .site-footer {
    padding-top: 80px;
    padding-bottom: 0;
    box-sizing: border-box;
  }

  .footer-links {
    background-color: #f8f8f8;
    padding: 5%;
  }

  .footer-links .page-width {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 50px;
  }

  .footer-section h4 {
    margin-bottom: 10px;
    font-size: 32px;
    font-weight: bold;
    letter-spacing: 1px;
  }

  .footer-section ul {
    list-style: none;
  }

  .footer-section ul li {
    margin-bottom: 10px;
    font-size: 24px;
  }

  .dropdown-content {
    display: none;
    padding-left: 20px;
  }

  .dropdown-content li {
    font-size: 24px;
    color: #666;
  }

  .footer-bottom {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    gap: 40px;
    padding-top: 80px;
    box-sizing: border-box;
    border-top: 1px solid #ddd;
  }

  .social-media {
    display: flex;
    gap: 80px;
  }

  .social-media i {
    font-size: 20px;
  }

  .logo {
    width: 320px;
    height: auto;
  }

  .copyright {
    width: 100%;
    text-align: center;
    padding: 10px;
    box-sizing: border-box;
    font-size: 24px;
    color: #fff;
    background-color: #000;
    margin: 0 auto;
  }

  /* Dropdown toggle */
  .dropdown .toggle {
    cursor: pointer;
  }

  .dropdown.open .dropdown-content {
    display: block;
  }

  @media only screen and (max-width: 800px) {
    .site-footer {
      padding-top: unset;
      padding-bottom: 0;
    }

    .footer-links .page-width {
      grid-template-columns: 1fr;
      gap: 40px;
      box-sizing: border-box;
      text-align: left;
    }

    .footer-section h4 {
      margin-bottom: 10px;
      font-size: 32px;
    }

    .footer-section ul li {
      margin-bottom: 10px;
      font-size: 24px;
    }

    .dropdown-content {
      display: none;
      padding-left: 20px;
    }

    .dropdown-content li {
      font-size: 24px;
    }

    .footer-bottom {
      gap: 40px;
      padding-top: 80px;
    }

    .social-media {
      display: flex;
      justify-content: center;
      gap: 15%;
    }

    .social-media a {
      width: 50px;
      height: auto;
    }

    .logo {
      width: 200px;
      height: auto;
    }

    .copyright {
      font-size: 14px;
    }
  }
</style>

{% schema %}
{
  "name": "Custom Template Footer",
  "max_blocks": 12,
  "settings": [
    {
      "type": "header",
      "content": "t:sections.footer.settings.header_language_selector",
      "info": "t:sections.footer.settings.header_language_selector"
    },
    {
      "type": "checkbox",
      "id": "show_locale_selector",
      "label": "t:sections.footer.settings.show_locale_selector.label",
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.footer.settings.header_currency_selector",
      "info": "t:sections.footer.settings.header_currency_selector"
    },
    {
      "type": "checkbox",
      "id": "show_currency_selector",
      "label": "t:sections.footer.settings.show_currency_selector.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_currency_flags",
      "label": "t:sections.footer.settings.show_currency_flags.label",
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.footer.settings.header_additional_footer_content"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "t:sections.footer.settings.show_payment_icons.label",
      "default": false
